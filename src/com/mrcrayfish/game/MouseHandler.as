package  {	import flash.events.MouseEvent;	import flash.display.Stage;	import flash.external.ExternalInterface;		public class MouseHandler {				private var player:Player;		private var stage:Stage;		public function MouseHandler(stage:Stage, player:Player) {			this.stage = stage;			this.player = player;			stage.addEventListener(MouseEvent.CLICK, handleLeftClick);		}				public function handleLeftClick(e:MouseEvent):void		{			player.handleInteraction(e.stageX, e.stageY);		}	}}